<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_8sdp"
    android:background="@color/windowBackgroundColor"
    tools:context="com.example.krsaool.myvocabularybank.activities.FlashCardsActivity">

    <com.wajahatkarim3.easyflipview.EasyFlipView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flipOnTouch="true"
        app:flipEnabled="true"
        app:flipDuration="400"
        android:id="@+id/easyFlipView">

        <!-- Back Layout Goes Here -->
        <include layout="@layout/flash_card_back_layout"/>

        <!-- Front Layout Goes Here -->
        <include layout="@layout/flash_card_layout"/>

    </com.wajahatkarim3.easyflipview.EasyFlipView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:menu="@menu/bottom_nav_items" />


</RelativeLayout>
