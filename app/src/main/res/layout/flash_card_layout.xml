<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_5sdp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp">

            <TextView android:id="@+id/txtCategory_cardfront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="Random Word"
                android:textAllCaps="true"
                android:textSize="@dimen/_7sdp"
                android:background="@color/gray_trans"
                android:padding="@dimen/_6sdp"/>

            <TextView android:id="@+id/txtWord_cardfront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="culminate"
                android:textStyle="bold"
                android:textSize="@dimen/_25sdp"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_minus10sdp"
                android:layout_marginRight="@dimen/_minus10sdp"/>


            <Button android:id="@+id/btnViewMeaning_cardfront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to see the meaning!"
                android:clickable="false"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorGrayText"
                style="@style/Widget.AppCompat.Button.Borderless"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>