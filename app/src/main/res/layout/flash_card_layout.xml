<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_5sdp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/txtWord_cardfront"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="70"
                    android:text="culminate"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_25sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCategory_cardfront"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="30"
                    android:background="@color/gray_trans"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="@dimen/_6sdp"
                    android:text="NEW WORD"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtWord_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:layout_alignParentLeft="true"
                    android:text="verb :"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <TextView android:id="@+id/txtCategory_meaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/txtWord_type"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:text="prove to be false or incorrect"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_10sdp"
                    android:background="@color/gray_trans"
                    android:padding="@dimen/_6sdp"
                    />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_minus10sdp"
                android:layout_marginRight="@dimen/_minus10sdp"/>


            <Button android:id="@+id/btnViewMeaning_cardfront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to see the meaning!"
                android:clickable="false"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorGrayText"
                style="@style/Widget.AppCompat.Button.Borderless"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>